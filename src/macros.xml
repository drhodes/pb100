<macros>
  <define-macro name="lecture" vars="title">
    <html lang="en">
      <head>
        <meta charset="utf-8" />
        <meta http-equiv="x-ua-compatible" content="ie=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        
        <title>[[title]]</title>
        <link rel="stylesheet" href="../media/css/main.css" />
        <link rel="icon" href="images/favicon.png" />
        <link rel="preconnect" href="https://fonts.googleapis.com"/>
        <link rel="preconnect" href="https://fonts.gstatic.com"/>
        
        <!-- <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&amp;display=swap" rel="stylesheet"/> -->
        <link href="https://fonts.googleapis.com/css2?family=Tinos:ital,wght@0,400;0,700;1,400;1,700&amp;display=swap" rel="stylesheet"/>
        
        <link rel="stylesheet"
              href="https://cdn.jsdelivr.net/npm/katex@0.16.10/dist/katex.css"
              integrity="sha384-K1E1xaIzoWihlXfiT5fcmLNabsnrl+dqc0errnRwtMX14tKRA9cCYNDGnXiHEZMs" crossorigin="anonymous"/>
        <script  src="https://cdn.jsdelivr.net/npm/katex@0.16.10/dist/katex.js"
                 integrity="sha384-IolEJdmwZJpJkyCvXBnmGt8wXcP3nvRjxBjPv7/PWW7oODJhZ+qiY1sDpwgjcKLT"
                 crossorigin="anonymous"></script>

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.10/dist/katex.min.css"
              integrity="sha384-wcIxkf4k558AjM3Yz3BBFQUbk/zgIYC2R0QpeeYb+TwlBVMrlgLqwRjRtGZiK7ww"
              crossorigin="anonymous"/>
        <script src="https://cdn.jsdelivr.net/npm/katex@0.16.10/dist/katex.min.js"
                integrity="sha384-hIoBPJpTUs74ddyc4bFZSM1TVlQDA60VBbJS0oA934VSz82sBx1X7kSx2ATBDIyd"
                crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/katex@0.16.10/dist/contrib/auto-render.min.js"
                integrity="sha384-43gviWU0YVjaDtb/GhzOouOXtZMP/7XUzwPTstBeZFe/+rCMvRwr4yROQP43s0Xk"
                crossorigin="anonymous"></script>
        <script src="../media/js/main.js"/>        
      </head>
      <body>
        <h2> [[title]] </h2>
        <contents/>
      </body>
    </html>
  </define-macro>
  
  <define-macro name="page" vars="title">   
    <div id="page-[[title]]" class="page">
      <h3><a href="#page-[[title]]">§</a> [[title]] </h3>
      
      <contents/>
    </div>
  </define-macro>
  
  <define-macro name="vid" vars="desc, youtubeid, start, end">
    <div id="[[this]]" class="vid">
      <div class="youtube-iframe">
        <iframe id="iframe-[[this]]"
                type="text/html"
                width="640" height="360"
                src="about:blank"
                frameborder="0" allow="fullscreen">
        </iframe>
      </div>
      <div class="seek-text"> lecture segment runs from <a href="asdf">[[start]]</a> to <a href="asdf">[[end]]</a>.
      </div>
      <script>
        <!-- vid_helper("[[this]]", "[[youtubeid]]", "[[start]]", "[[end]]"); -->
      </script>
    </div>
  </define-macro>
  
  <define-macro name="vid1" vars="desc,start,end">
    <vid desc="[[desc]]" youtubeid="LY7YmuDbuW0" start="[[start]]" end="[[end]]" />
  </define-macro>

  <define-macro name="vid2" vars="desc,start,end">
    <vid desc="[[desc]]" youtubeid="9_xG0AGRa-w" start="[[start]]" end="[[end]]" />
  </define-macro>
  
  <define-macro name="bb">
    <span style="color: blue"> <b><contents/></b> </span>
  </define-macro>

  <define-macro name="multiplechoiceresponse">
    <div>
      <contents/>
    </div>
  </define-macro>

  <define-macro name="problem" vars="display_name">
    <div class="problem">
      <div class="problem-title"><b>Problem: [[display_name]]</b></div>
      <contents/>
    </div>
  </define-macro>

  <define-macro name="mchoice-group">
    <div>
      <contents/>
    </div>
  </define-macro>

  <define-macro name="f">
    <choice correct="false"> <contents/> </choice>
  </define-macro>
  
  <define-macro name="t">
    <choice correct="true"> <contents/> </choice>
  </define-macro>
  
  <define-macro name="stmt">
    <div class="stmt"> <contents/> </div>
  </define-macro>
  
  <define-macro name="choice" vars="correct">
    <div class="choice"> `\circ \quad` <contents/> </div>
  </define-macro>
  
  <define-macro name="mchoice" vars="display_name">
    <problem display_name="[[display_name]]">
      <multiplechoiceresponse>
        <contents/>
      </multiplechoiceresponse>
    </problem>
  </define-macro>

  <define-macro name="bp">
    <div style="margin-bottom: 10px">
      <div style="margin-top: 15px">
        <span style="margin-right: 10px">☕ </span>
        <span> <contents/> </span>
        <br/>
      </div>
    </div>
  </define-macro>

  <define-macro name="center-box">
    <div style="text-align: center;">
      <pad-box size="20px">
        <contents/>
      </pad-box>
    </div>
  </define-macro>
  
  <define-macro name="pad-box" vars="size">
    <div style="padding: [[size]] [[size]] [[size]] [[size]]; border-top-radius: 3px">
      <contents/>
    </div>    
  </define-macro>
  
  <define-macro name="prob" vars="desc">
    <div>
      <p style="font-weight: 700; display: block; color: #fff; background: #6ab0de; padding: 6px 12px; margin: -12px -12px 12px;">
        Problem
      </p>
    </div>
  </define-macro>
  
  <define-macro name="bu">
    <b> <u> <contents/> </u> </b>
  </define-macro>

  <define-macro name="blue">
    <span style="color: #00f"><b><contents/></b></span>
  </define-macro>

  <define-macro name="definition">
    <div class="definition">
      <div class="definition-title">
        <b>Definition</b>
        <span id="[[this]]-span" class="definition-number"></span>
        <span><contents/></span>
      </div>
      <script>
        defspan = document.getElementById("[[this]]-span");
        defspan.textContent = cur_def();
      </script>
    </div>
  </define-macro>

  <define-macro name="theorem">
    <div class="theorem">
      <div class="theorem-title">
        <b>Theorem</b> <span id="[[this]]-span" class="theorem-number"></span> <i><contents/></i>
      </div>

      <script>
        thmspan = document.getElementById("[[this]]-span");
        thmspan.textContent = cur_def();
      </script>
    </div>
  </define-macro>
  
  <define-macro name="box-outline">
    <div style="border-style: solid; border-color: white; border-width: 1px;">
      <contents />
    </div>
  </define-macro>

  <define-macro name="wts">
    <span><u>Want to show:</u></span>
  </define-macro>

  <define-macro name="star" vars="n">
    <div> `(\star_[[n]])` <i><contents/></i> </div>      
  </define-macro>

  <define-macro name="align">
    <div>
      \[ \begin{align*} <contents/> \end{align*} \]
    </div>
  </define-macro>

  <define-macro name="ignore">
    <div/>
  </define-macro>

  <define-macro name="quote" vars="who, context">
    <blockquote>
      <div><contents/></div> <footer>—[[who]], <cite>[[context]]</cite></footer>
    </blockquote>
  </define-macro>

  <define-macro name="proof">
    <div class="proof">
      <i>Proof.</i><span class="proof-gap"></span>
      <contents/>
      <qed/>
    </div>    
  </define-macro>

  
  <define-macro name="qed"> <div class="qed"> `\square` </div>  </define-macro>

  <define-macro name="scribe" args="who">
    <div class="scribe">
      <span class="scribe-note"> <sup> (scribe note) </sup> </span>
      <contents/>
    </div>
  </define-macro>

  <define-macro name="term">
    <span class="term"><contents/></span>
  </define-macro>
</macros>
